{
  "manifest_version": 3,
  "name": "SpokenPost",
  "version": "1.0.0",
  "description": "Convert articles to audio with one click",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "host_permissions": [
    "http://localhost:3000/*"
  ]
}